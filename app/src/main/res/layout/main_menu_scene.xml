<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenuScene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star_list"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:foreground="@drawable/blur_foreground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:alpha="0.9"
            android:fontFamily="@font/dune_rise"
            android:gravity="center"
            android:text="SPACE"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="60sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/invader"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0.9"
            android:fontFamily="@font/dune_rise"
            android:gravity="center"
            android:text="INVADER"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="60sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dune_rise"
            android:text="Welcome Aboard!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/namePlayer"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:fontFamily="@font/dune_rise"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@drawable/btn_shape_round"
            android:contentDescription="Email"
            android:fontFamily="@font/dune_rise"
            android:onClick="startGame"/>

        <TextView
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:text=""
            android:textColor="#330022"
            android:textSize="100sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_round"
            android:fontFamily="@font/dune_rise"
            android:text="Skin"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:onClick="skinPopup"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text=""
            android:textColor="#330022"
            android:textSize="100sp" />

        <Button
            android:id="@+id/lbBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEARDER\nBOARD"
            android:background="@drawable/btn_shape_round"
            android:fontFamily="@font/dune_rise"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:onClick="leaderboard"/>


    </LinearLayout>


</LinearLayout>